<div class="container-fluid">
  <div class="form-group">
<p id="notice"><%= notice %></p>
 
<h1>Lista de Inscriptos</h1>
  <% if user_signed_in?  %>
   <%= link_to ' Nuevo Colono', new_registration_path, class: "btn btn-primary fa fa-group pull-right" if current_user.is_admin? %>
  <% end %>
  </div>

<table  id="registrations-list" class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Group</th>
      <th>Nombre</th>
      <th>Edad</th>
      <th>Genero</th>
      <th>DNI</th>
      <th>Grado</th>
      <th>Nadar</th>
      <th>Padre</th>
      <th>Telefono</th>
      <th>Madre</th>
      <th>Telefono</th>
      <th>Registro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.group.nombre if registration.group %></td>
        <td><%= registration.colonist_name %></td>
        <td><%= registration.colonist_age %></td>
        <td><%= gender_to_text(registration.colonist_gender) %></td>
        <td><%= registration.colonist_dni %></td>
        <td><%= registration.colonist_grade %></td>
        <td><%= registration.colonist_know_swim %></td>
        <td><%= registration.father_name %></td>
        <td><%= registration.father_work_phone %></td>
        <td><%= registration.mother_name %></td>
        <td><%= registration.mother_work_phone %></td>
        <td><%= registration.who_register %></td>
        <td><%= link_to ' Mostrar', registration, type: "button", class: "btn btn-default fa fa-plus" %></td>
        <td><%= link_to ' Editar', edit_registration_path(registration), class: "btn btn-warning fa fa-pencil", title: 'Editar Grupo', data: { toggle: 'tooltip', placement: 'top', original_title: 'Editar detalles del alumno' }  %></td>
        <td><%= link_to ' Eliminar', registration, class:"btn btn-danger fa fa-trash-o", method: :delete, data: { confirm: "¿Esta seguro de que desea eliminar el Alumno \'" + registration.colonist_name + "\'?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Volver', :back, class: "btn btn-default"   %>
<%= link_to 'Regresar al Menú', root_path, class: "btn btn-default"   %>
</div>
